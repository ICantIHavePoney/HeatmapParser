<UserControl x:Class="HeatmapParserWPF.PathPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeatmapParserWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel Height="28">
        <Button Name="browseButton" DockPanel.Dock="Right" Padding="5" Margin="5,0,0,0"
                FontWeight="Bold"
                Click="BrowseButton_Click">...</Button>
        <Grid>
            <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Name="pathTxtBox"/>
        </Grid>
    </DockPanel>
</UserControl>

    